default_platform(:ios)

platform :ios do
  lane :beta do
    # Step 1: Verify App Store Connect API credentials
    api_key = app_store_connect_api_key(
    key_id: ENV["APP_STORE_CONNECT_KEY_ID"],
    issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
    key_filepath: ENV["APP_STORE_CONNECT_KEY_PATH"],
    duration: 1200,
    in_house: false,
    is_key_content_base64: false
  )
  

    # Step 2: Build with explicit provisioning
    build_app(
      scheme: "teammate",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.mmaamoun.teammate" => "match AppStore com.mmaamoun.teammate"
        },
        signingStyle: "manual"
      },
      clean: true
    )

    # Step 3: Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true,
      verbose: true
    )

    # Step 4: Notification
    slack(
      message: "âœ… New beta build uploaded to TestFlight!",
      success: true
    )
  end
end
